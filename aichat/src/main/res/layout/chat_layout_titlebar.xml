<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layout_titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sobot_DIMEN_108PX"
    android:background="@color/sobot_color_title_bar_bg">

    <TextView
        android:id="@+id/tv_chat_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginRight="70dp"
        android:layout_toRightOf="@+id/tv_left_back"
        android:ellipsize="end"
        android:gravity="center|center_horizontal"
        android:singleLine="true"
        android:text="智能客服"
        android:textColor="@color/sobot_color_title_bar_title"
        android:textSize="@dimen/sobot_text_title" />

    <LinearLayout
        android:id="@+id/ll_container_conn_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="70dp"
        android:layout_toRightOf="@+id/tv_left_back"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_conn_loading"
            style="@style/sobot_progress_circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_conn_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center|center_horizontal"
            android:singleLine="true"
            android:text="@string/sobot_conntype_unconnected"
            android:textColor="@color/sobot_color_title_bar_title"
            android:textSize="@dimen/sobot_text_title"
            android:visibility="visible" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_left_back"
        android:layout_width="80dp"
        android:layout_height="@dimen/sobot_DIMEN_108PX"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/sobot_back"
        android:textColor="@color/sobot_bg_white"
        android:textSize="@dimen/sobot_text_title" />

    <TextView
        android:id="@+id/tv_right_back"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:textColor="@color/sobot_bg_white"
        android:textSize="@dimen/sobot_text_title"
        android:visibility="gone" />

</RelativeLayout>